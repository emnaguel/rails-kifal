
<div id = "myCarousel" class = "carousel slide">
  <% if @car.pictures.attached? %>

  <!-- Carousel indicators -->
  <ol class = "carousel-indicators">
    <li data-target = "#myCarousel" data-slide-to = "0" class = "active"></li>
    <li data-target = "#myCarousel" data-slide-to = "1"></li>
    <li data-target = "#myCarousel" data-slide-to = "2"></li>
  </ol>

  <!-- Carousel items -->
  <div class = "carousel-inner">
    <div class = "item active">
        <%= image_tag @car.pictures[0] %>
    </div>

        <div class = "item" )>
          <%= image_tag @car.pictures[1] %>
        </div>

        <div class = "item">
         <img src = "http://sf1.viepratique.fr/wp-content/uploads/sites/9/2017/04/dodge_avenger_r_t_42-750x410.jpg" alt = "Third slide">
       </div>
        </div>


 <!-- Carousel nav -->
 <a class = "carousel-control left" href = "#myCarousel" data-slide = "prev"><i class="fas fa-chevron-circle-left"></i></a>
 <a class = "carousel-control right" href = "#myCarousel" data-slide = "next"><i class="fas fa-chevron-circle-right"></i></a>

 <% end %>
</div>

<!-- @post.image.present? will always return true, use attached? to check presence -->











